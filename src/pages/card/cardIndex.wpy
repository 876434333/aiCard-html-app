                      <view class="descript">
                          <view class="c-323232 font-size-26 words-break">{{item.offer_name}}</view>
                          <view class="font-size-26" style="color:#ff3a00"><text class="font-size-18">￥</text>{{item.offer_price}}</view>
                      </view>
