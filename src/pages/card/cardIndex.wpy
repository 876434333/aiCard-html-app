            <scroll-view scroll-x style="margin-top:14rpx;">
              <view class="productList">
                <repeat for="{{recommendOfferList}}" key="id" index="index" item="item">
                  <view class="panelBody" @tap="goShopOfferDetails('{{index}}')">
